from tkinter import *

hehe=Tk()

#this doesn't work
#e=Entry(hehe,width=50,borderwidth=5).pack()

e=Entry(hehe,width=50,borderwidth=5)
e.pack()

e.insert(0,"enter your name")

def Click():
    Label(hehe,text=e.get()).pack()


Button(hehe,text="I'm useless",command=Click,padx=50,pady=50,fg='blue',bg='black').pack()


hehe.mainloop()
